<div class="row">
  <div class="comments">


    <%if(errors.length > 0){%>
      <div class="alert alert-warning alert-dismissible" role="alert">
    <% errors.forEach(function(error){%>
      <%= error%>
      <br>
    <% });%>
    </div>
    <% }%>

    <form class="form">
      <div class="form-group">
        <textarea class="form-control textToCreateUpdateComment" rows="4"><%= comment.escape("body") %></textarea>
      </div>
      <button class="btn btn-failure createUpdateComment">Add</button>
      <button class="btn btn-failure cancelCreateUpdateComment">Cancel</button>
      <a href="#" class="close close-lg">&times;</a>
    </form>


  </div>
</div>
