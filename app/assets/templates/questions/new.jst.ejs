<form class="form">
  <h2 class="space">Your Question</h2>

  <div class="form-group">Title
    <input class="form-control" id="new-title" type="text"> </input>
  </div>

  <div class="form-group">
    <textarea class="form-control" rows="10"></textarea>
  </div>
  <div class="form-group">
    <input class="form-control" id="author_id" type="hidden" value=<%= current_user.escape("id")%>> </input>
  </div>
  <div class="form-group">
    <input class="form-control" id="author_name" type="hidden" value=<%= current_user.escape("username")%>> </input>
  </div>


  <button class="btn btn-success">Add</button>
  <a href="#" class="close close-lg">&times;</a>
</form>

