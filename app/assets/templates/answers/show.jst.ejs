



<div class="row">
  <div id="answer-votecell" class="votecell"></div>
  <div class="post-text" itemprop="text">  
    <p><%= answer.escape("body") %></p>
  </div>
</div>
<div class="row" style='padding-top: 10px; padding-bottom: 40px;'>
  <div class="author-info">
    <div class="pull-right">
      <div class="object-hyperlink col-xs-1">
        <a href=<%= "#users/" + answer.escape("author_id") %>><%= answer.escape("author_name")%></a>
      </div>
    </div>
  </div>
  <div class="">
    <% if(SOC.currentUser.id === parseInt(answer.escape("author_id"))){%>
      <div class="object-hyperlink edit col-xs-1"><a>Edit</a></div>
      <div class="object-hyperlink destroy col-xs-1"><a>Delete</a></div>
    <% } %>  
  </div>
</div>

<div class="row">
  <div class="answerCommentNewShowEdit"></div>
</div>

<div class="row">
  <div class="newAnswerComment"></div>
</div>



<div class= "container">
  <div class="mainbar col-xs-12" style="font-size: 200%; padding-top: 50px;">
    <div class="row" style="border-bottom: 1px solid #ccc; padding-bottom: 50px;">
      <div class="col-xs-9">
        <p><b>Description</b></p>
        <% if(editingAnswer){%>
          <textarea class="form-control" id="user-description" rows="5" style="font-size: 100%;"><%= answer.escape("body")%></textarea>
          <button class="btn btn-success descriptionSubmit" style="font-size: 100%; margin-top: 20px;">Submit</button>    
        <% } %>  
        <% if(!editingAnswer){%>
            <p><%=user.escape("description")%><p>      
            <% if(SOC.currentUser.id === parseInt(answer.escape("author_id"))){%>
            <% if(SOC.currentUser.id === parseInt(answer.escape("author_id"))){%>
              <div class="object-hyperlink edit col-xs-1"><a>Edit</a></div>
              <div class="object-hyperlink destroy col-xs-1"><a>Delete</a></div>
            <% } %>  
          <% } %>  
        </div>
      </div>
    </div>
  </div>
  <div class="row" style="font-size: 200%;">
    <ul class="nav my-nav-pills col-xs-12">
      <li><a id="questions-authored">Questions Authored</a></li>
      <li><a id="questions-upvoted">Questions Upvoted</a></li>
    </ul>
  </div>
  <div id="user-show-content"></div>
</div>