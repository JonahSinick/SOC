<h1>Sign Up</h1>

<form action= "<%= users_url%>" method="post">
  
  <input 
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token%>"
  >
  
  
  <label>Username
  <input 
    type="text"
    name="user[username]"
    value="<%= @user.email %>"
  >
  </label>

  <label>Email
  <input 
    type="text"
    name="user[email]"
    value="<%= @user.email %>"
  >
  </label>

  <label>Password
  <input 
    type="text"
    name="user[password]"
  >
  </label>
  
  <button type="submit">Sign up</button>

  
</form>