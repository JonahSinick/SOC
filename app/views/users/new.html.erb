



<div class="form-group row">
  <div class="col-xs-4 col-xs-offset-1" >
    <form role="form" action="<%= session_url %>" method="post">
    <h2>Sign Up</h2>
      <input
        name="authenticity_token"
        type="hidden"
        value="<%= form_authenticity_token %>">

      <div class='form-group'>
        <label for="user_username">Username</label>
        <input
          class="form-control"
          id="user_username"
          name="user[email]"
          value="<%= @user.username %>"  
          type="text">
        </div>


        
      <div class='form-group'>
        <label for="user_username">Email</label>
        <input
          class="form-control"
          id="user_username"
          name="user[email]"
          value="<%= @user.email %>"  
          type="text">
        </div>
        
      <div class='form-group'>
      <label for="user_password">Password</label>
      <input
        class="form-control"
        id="user_password"
        name="user[password]"
        type="password">
      </div>        
        
      <button type="submit" class="btn btn-success">Log In 
      </button>
    </form>
  </div>
</div>
